{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "blackpill_build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j12",
                "blackpill" // Or any specific target, e.g., "clean", "my_target"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build" // Sets the working directory to your project root
            },
            "group": {
                "kind": "build",
                "isDefault": true // Set to true to make this the default build task
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated", // Open a new terminal panel for this task
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "kill_nc",
            "type": "shell",
            "command": "kill -9 $(pgrep -x socat)",
            "options": {
                "cwd": "${workspaceFolder}/build" // Sets the working directory to your project root
            },
            "group": {
                "kind": "test",
                "isDefault": false // Set to true to make this the default build task
            },
            "presentation": {
                "reveal": "never", // Always show the terminal output
                "panel": "dedicated" // Open a new terminal panel for this task
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "prelaunch_debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "blackpill_build",
                // "nc"
            ],
        }
    ]
}