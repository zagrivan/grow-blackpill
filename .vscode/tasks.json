            },
            "group": {
                "kind": "build",
                "isDefault": true // Set to true to make this the default build task
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated", // Open a new terminal panel for this task
                "focus": false
            },
            "problemMatcher": [] 
